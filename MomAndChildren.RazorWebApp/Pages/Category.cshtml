@page
@model MomAndChildren.RazorWebApp.Pages.CategoryModel
@{
    ViewData["Title"] = "Category Page";
    var categories = Model.Categories;
    var catgory = Model.Category;
}

<div class="text-center">
    <h1 class="display-6">Category Management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Id</th>
                    <th class="card-title text-center">Name</th>
                    <th class="card-title text-center">Status</th>
                    <th class="card-title text-center">Action</th>
                </tr>
            </thead>
            <tbody class="tblcategoryList">
                @if (categories.Count > 0)
                {
                    foreach (var category in categories)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>
                                @if (category.Status == 1)
                                {
                                    <span>Active</span>
                                }
                                else
                                {
                                    <span>In-Active</span>
                                }
                            </td>
                            <td>
                                <a class="d-sm-inline-flex justify-content-between" onclick="editCategory();">Edit</a> | 
                                <a class="d-sm-inline-flex justify-content-between" onclick="deleteCategory();">Delete</a> | 
                                <a class="d-sm-inline-flex justify-content-between" onclick="changeStatus();">Change Status</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="categoryAddModal" tabindex="-1" aria-labelledby="categoryAddModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="categoryAddModalLabel">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="categoryAddModalContent"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Name</label>
                                    <input asp-for="Category.CategoryName" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="1">Status</label>
                                    <input asp-for="CheckStatus" type="checkbox" checked>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="categoryEditModal" tabindex="-1" aria-labelledby="categoryEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="categoryEditModalLabel">Update Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="categoryEditModalContent"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <input type="hidden" asp-for="IsUpdate"/>
                                <input type="hidden" asp-for="Category.CategoryId"/>
                                <div class="col-md-6">
                                    <label for="1">Name</label>
                                    <input asp-for="Category.CategoryName" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="1">Status</label>
                                    <input asp-for="CheckStatus" type="checkbox" checked>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function add() {
            $('#categoryAddModal').modal('show');
        }
    </script>

    <script type="text/javascript">
        function editCategory() {
            $('#categoryEditModal').modal('show');
        }
    </script>
}
