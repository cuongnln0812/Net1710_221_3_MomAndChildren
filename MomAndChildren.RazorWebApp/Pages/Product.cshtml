@page
@model MomAndChildren.RazorWebApp.Pages.ProductModel
@{
    ViewData["Title"] = "Product page";
    var products = Model.Products;
}

<div class="text-center">
    <h1 class="display-6">Product management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Code</th>
                    <th class="card-title text-center">Name</th>
                    <th class="card-title text-center">Quantity</th>
                    <th class="card-title text-center"></th>
                </tr>
            </thead>
            <tbody class="tblcategoryList">
                @if (products.Count > 0)
                {
                    foreach (var product in products)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.Quantity</td>
                            <></>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="categoryAddModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="currencyModalLabel">Category Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="categoryModalContent"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Name</label>
                                    <input asp-for="Product.ProductName" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Status</label>
                                    <input asp-for="Product.Status" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Expire Date</label>
                                    <input asp-for="Product.ExpireDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Manufacturing Date</label>
                                    <input asp-for="Product.ManufacturingDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Quantity</label>
                                    <input asp-for="Product.Quantity" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Price</label>
                                    <input asp-for="Product.Price" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">BrandID</label>
                                    <input asp-for="Product.BrandId" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">CategoryID</label>
                                    <input asp-for="Product.CategoryId" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Description</label>
                                    <input asp-for="Product.Description" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
                        {
    <script type="text/javascript">
        function add() {
            $('#categoryAddModal').modal('show');
        }
        function edit(id) {
            $("#categoryPutModal").modal('show');
        }
    </script>
}