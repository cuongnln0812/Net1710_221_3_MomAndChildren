@page
@model MomAndChildren.RazorWebApp.Pages.CartModel
@{
    Layout = "_Layout";
}


<div class="text-center">
    <h1 class="display-6">Your Cart</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">
            Add Product
        </button>
    </div>
</div>

@if (Model.CartItems != null && Model.CartItems.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="button" class="btn btn-success mt-3" data-bs-toggle="modal" data-bs-target="#createOrderModal">
        Create Order
    </button>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        Your cart is empty.
    </div>
}


<!-- Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Add Product to Cart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addProductForm" method="post" asp-page-handler="AddToCart" onsubmit="return validateAddProductForm()">
                    <div class="form-group">
                        <label for="ProductId">Product</label>
                        <select id="ProductId" name="ProductId" class="form-control">
                            <option value="0">Select a product</option>
                            @foreach (var product in Model.Products)
                            {
                                <option value="@product.ProductId">@product.ProductName</option>
                            }
                        </select>
                        <span id="productIdError" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Quantity">Quantity</label>
                        <input id="Quantity" name="Quantity" class="form-control" type="number" min="1" />
                        <span id="quantityError" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal for creating order -->
<div class="modal fade" id="createOrderModal" tabindex="-1" aria-labelledby="createOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createOrderModalLabel">Create Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="CreateOrder" onsubmit="return validateAddOrderIdForm()">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="OrderId">Order ID</label>
                        <select id="OrderId" asp-for="OrderId" class="form-control" required>
                            <option value="0">Select an order ID</option>
                            @foreach (var order in Model.OrderIds)
                            {
                                <option value="@order.OrderId">@order.OrderId</option>
                            }
                        </select>
                        <span id="orderIdError" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Create Order</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validateAddProductForm() {
            var isValid = true;
            var productId = document.getElementById('ProductId').value;
            var quantity = document.getElementById('Quantity').value;

            var productIdError = document.getElementById('productIdError');
            var quantityError = document.getElementById('quantityError');

            if (productId == "0") {
                productIdError.innerText = "Please select a valid product.";
                isValid = false;
            } else {
                productIdError.innerText = "";
            }

            if (quantity < 1) {
                quantityError.innerText = "Quantity must be at least 1.";
                isValid = false;
            } else {
                quantityError.innerText = "";
            }

            return isValid;
        }

        function validateAddOrderIdForm() {
            var isValid = true;
            var orderId = document.getElementById('OrderId').value;

            var orderIdError = document.getElementById('orderIdError');

            if (orderId == "0") {
                orderIdError.innerText = "Please select a valid orderId.";
                isValid = false;
            } else {
                orderIdError.innerText = "";
            }
            return isValid;
        }
    </script>
}